<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.amirhosein.jalase8calculator.MainActivity">

    <TextView
        android:maxLength="9"
        android:id="@+id/TVinp"
        android:paddingTop="40dp"
        android:textSize="70dp"
        android:textColor="#fff"
        android:background="#2d2d2d"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="1">
        <Button
            android:id="@+id/btnac"
            android:background="#c6c6c6"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-5dp"
            android:textSize="30dp"
            android:text="AC"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:background="#c6c6c6"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="+/-"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:background="#c6c6c6"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btndivide"
            android:textColor="#fff"
            android:background="#ff8400"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="รท"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.28" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/btn7"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-5dp"
            android:textSize="30dp"
            android:text="7"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25"/>

        <Button
            android:id="@+id/btn8"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="8"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/btn9"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />

        <Button
        android:id="@+id/btnmint"
        android:textColor="#fff"
        android:background="#ff8400"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="-7dp"
        android:text="ร"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
            android:layout_weight="0.28"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-5dp"
            android:textSize="30dp"
            android:text="4"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/btn5"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="5"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btn6"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btnminus"
            android:textColor="#fff"
            android:background="#ff8400"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="-"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-5dp"
            android:textSize="30dp"
            android:text="1"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btn2"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="2"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btn3"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btnplus"
            android:textColor="#fff"
            android:background="#ff8400"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="+"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn0"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="1.55" />
        <Button
            android:id="@+id/btnDat"
            android:background="#dadada"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.25" />
        <Button
            android:id="@+id/btnequal1"
            android:textColor="#fff"
            android:background="#ff8400"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-7dp"
            android:text="="
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="0.195" />

    </LinearLayout>


</LinearLayout>
